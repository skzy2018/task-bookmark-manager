{
  "manifest_version": 3,
  "name": "Task & Bookmark Manager",
  "version": "1.0",
  "description": "A Chrome extension to manage tasks and related URL bookmarks",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Task & Bookmark Manager"
  },
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
